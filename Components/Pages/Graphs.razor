@page "/graphs"
@using WebsiteFirstDraft.Data.Models
@rendermode InteractiveServer
@inject UserSessionService Session
@inject AppDbContext Db

<br />
<div class="container-fluid">
    <div class="card shadow-sm">
        <div class="card-body">

            @* QUESTION 1 *@
            <div class="mb-4">
                <label class="form-label">
                    <strong>
                        What category of graph are you looking for?
                    </strong>
                </label>
                <select class="form-select" @bind="GraphCategory">
                    <option disabled value="">Select an option</option>
                    <option>BodyweightProgress</option>
                    <option>CalorieTracking</option>
                    <option>Macros</option>
                    <option>Hypertrophy</option>
                    <option>Exercise</option>
                    @* <option>Consistency</option> *@
                </select>
            </div>

            @* QUESTION 2 *@
            <div class="mb-4">
                <label class="form-label">
                    <strong>
                        Select your graph
                    </strong>
                </label>
                <EnumInput TEnum="GraphName" @bind-Value="@selectedGraph" />
                <button class="btn btn-primary mt-2" @onclick="OnGraphSelected">Load Graph</button>
            </div>
        </div>
    </div>
</div>
        
<br />
<br />

@* Graph Rendering Container *@
<div class="container-fluid">
    <div class="card shadow-sm">
        <div class="card-header bg-primary text-white">
            <h5 class="mb-0">
                <i class="bi bi-graph-up"></i> Graph Visualization
            </h5>
        </div>
        <div class="card-body">
            @if (isGraphLoaded)
            {
                @* Graph rendering area *@
                <div class="overflow-x-auto">
                    @if (IsBarChart())
                    {
                        <BarChart @ref="barChart" Width="800" Height="400" />
                    }
                    else if (IsPieChart())
                    {
                        <PieChart @ref="pieChart" Width="400" Height="400" />
                    }
                    else
                    {
                        <LineChart @ref="lineChart" Width="800" Height="400" />
                    }
                </div>
            }
            else
            {
                @* Placeholder message when no graph is selected *@
                <div class="text-center py-5">
                    <i class="bi bi-bar-chart-line" style="font-size: 4rem; color: #6c757d;"></i>
                    <h4 class="mt-3 text-muted">No Graph Selected</h4>
                    <p class="text-muted">
                        Please select a graph from the dropdown menu above and click 
                        <strong>"Load Graph"</strong> to visualize your data.
                    </p>
                    <div class="alert alert-info mt-3 d-inline-block" role="alert">
                        <i class="bi bi-info-circle"></i> 
                        Choose from categories like Bodyweight Progress, Calorie Tracking, Macros, and more!
                    </div>
                </div>
            }
        </div>
    </div>
</div>

