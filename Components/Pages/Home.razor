    @*Reference to the rendered PieChart component, allowing inbuilt methods to be called
    This class originated from the NuGet package i installed (Blazor Bootstrap)*@
    private PieChart pieChart = default!;

    @*Adds configuration options for the chart such as title, legend position, responsiveness*@
    private PieChartOptions pieChartOptions = default!;

    @*Another component that holds labels and datasets*@
    private ChartData chartData = default!;

    @*Stores an array of predefined colours to use for the pie slices*@
    private string[]? backgroundColors;

    @*default! tells the compiler that a value will be assigned to the fields so dont warn about nulls*@


    @*Tracks how many datasets have been created*@
    private int datasetsCount = 0;

    @*Tracks how many labels exist which is important for data and colour alignment*@
    private int dataLabelsCount = 0;

    @*Generates random values for demo data. Will eventually use data from a database.*@
    private Random rnd = new();


    @*This runs once when the component is created*@
    protected override void OnInitialized()
    {

        @*Loads default colours and creates the charts data alongside 3 labels with 1 dataset containing random values for each label*@
        backgroundColors = ColorUtility.CategoricalTwelveColors;
        chartData = new ChartData { Labels = GetDefaultDataLabels(3), Datasets = GetDefaultDataSets(1) };

        @*Configures chart options to have a responsive layout, title text and visibility, legend positioned on the bottom*@
        pieChartOptions = new();
        pieChartOptions.Responsive = true;
        pieChartOptions.Plugins.Title!.Text = "Daily Calorie Budget Accumulator";
        pieChartOptions.Plugins.Title.Display = true;

        pieChartOptions.Plugins.Legend.Position = "bottom";
    }

    @*Blazor components render before child elements are fully available. firstRender == true ensures the chart is initialised only once*@
    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            await pieChart.InitializeAsync(chartData, pieChartOptions);
        }
        await base.OnAfterRenderAsync(firstRender);
    }

    @*This region is used to prepare the data*@
    #region Data Preparation


    @*Creates a list of datasets with each dataset representing a pie chart series*@
    private List<IChartDataset> GetDefaultDataSets(int numberOfDatasets)
    {
        var datasets = new List<IChartDataset>();

        for (var index = 0; index < numberOfDatasets; index++)
        {
            datasets.Add(GetRandomPieChartDataset());
        }

        return datasets;
    }

    @*Creates a dataset with a label, random numeric values and matching background colours*@
    private PieChartDataset GetRandomPieChartDataset()
    {
        datasetsCount += 1;
        return new() { Label = "Grams" , Data = GetRandomData(), BackgroundColor = GetRandomBackgroundColors() };
    }

    @*Generates random data. One value per label ranging from 0-100*@
    private List<double?> GetRandomData()
    {
        var data = new List<double?>();
        for (var index = 0; index < dataLabelsCount; index++)
        {
            data.Add(rnd.Next(0, 100));
        }

        return data;
    }

    @*Assigns colours to each slice in the pie*@
    private List<string> GetRandomBackgroundColors()
    {
        var colors = new List<string>();
        for (var index = 0; index < dataLabelsCount; index++)
        {
            colors.Add(backgroundColors![index]);
        }

        return colors;
    }

    @*Generates labels and keeps dataLabelsCount in sync so data and colours align*@
    private List<string> GetDefaultDataLabels(int numberOfLabels)
    {
        var labels = new List<string>();
        for (var index = 0; index < numberOfLabels; index++)
        {
            labels.Add(GetNextDataLabel());
            dataLabelsCount += 1;
        }

        return labels;
    }


    private string Macro(int num)
    {
        switch (num)
        {
            case 0:
                return "Carbs";

            case 1:
                return "Protein";
            default:
                return "Fats";
        }
    }


    private string GetNextDataLabel() => $"{Macro(dataLabelsCount)}";

    private string GetNextDataBackgrounfColor() => backgroundColors![dataLabelsCount];

    #endregion  Data Preparation


